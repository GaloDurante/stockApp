generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            Int        @id @default(autoincrement())
  name          String
  description   String?
  category      Category
  stock         Int
  purchasePrice Int
  salePrice     Int
  salePriceBox  Int?
  unitsPerBox   Int        @default(6)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  saleItems     SaleItem[]
  PurchaseItem  PurchaseItem[]
}

enum Category {
  VINOS_TINTOS
  VINOS_BLANCOS
  VINOS_ROSADOS
  RON
  LICORES
  SIDRAS
  CHAMPAGNES
  CERVEZAS
  VODKA
  WHISKIES
  GASEOSAS
  APERITIVOS
  GIN
  ACCESORIOS
  ALMACEN
}

model Sale {
  id                            Int        @id @default(autoincrement())
  date                          DateTime
  note                          String?
  totalPrice                    Int
  status                        SaleStatus @default(Pendiente)
  shippingPrice                 Int?
  supplierCoveredAmount Int?
  createdAt                     DateTime   @default(now())
  updatedAt                     DateTime   @updatedAt

  items                         SaleItem[]
  payments                      Payment[]
  accountMovement               AccountMovement[]

  @@index([date])
}

model SaleItem {
  id            Int       @id @default(autoincrement())
  saleId        Int
  productId     Int?
  productName   String
  quantity      Int
  unitPrice     Int
  purchasePrice Int
  isBox         Boolean   @default(false)
  unitsPerBox   Int

  sale        Sale      @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product     Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)
  @@index([saleId])
}

model Payment {
  id         Int           @id @default(autoincrement())
  saleId     Int
  method     PaymentMethod
  amount     Int
  receiver   Receiver?
  createdAt  DateTime      @default(now())

  sale       Sale          @relation(fields: [saleId], references: [id], onDelete: Cascade)
}

enum PaymentMethod {
  Efectivo
  Transferencia
}

enum Receiver {
  Walter
  Yanina
}

enum SaleStatus {
  Pendiente
  Completada
}

model Purchase {
  id         Int            @id @default(autoincrement())
  date       DateTime
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  items      PurchaseItem[]
  @@index([date])
}

model PurchaseItem {
  id          Int       @id @default(autoincrement())
  purchaseId  Int
  productId   Int?
  productName String
  quantity    Int
  purchasePrice   Int

  purchase    Purchase  @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  product     Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)
}

model AccountMovement {
  id          Int        @id @default(autoincrement())
  receiver    Receiver
  type        MovementType
  amount      Int
  description String?
  date        DateTime   @default(now())

  saleId      Int?
  sale        Sale?      @relation(fields: [saleId], references: [id], onDelete: Cascade)
}

enum MovementType {
  Ingreso
  Gasto
}
